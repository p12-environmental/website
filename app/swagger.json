{
	"openapi": "3.1.0",
	"info": {
		"title": "P12 Website API",
		"description": "Serverside expressJS API definition for the P12 environmental group project website",
		"version": "1.0.0"
	},
	"servers": [
		{
			"url": "http://localhost:8080/"
		}
	],
	"paths": {
		"/mailing/subscribe": {
			"post": {
				"summary": "Subscribe to mailing list",
				"description": "Adds the specified email to the site mailing list",
				"requestBody": {
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"type": "object",
								"properties": {
									"email": {
										"type": "string"
									}
								},
								"required": [
									"email"
								]
							}
						}
					}
				},
				"responses": {
					"200": {
						"description": "Success - Email subscribed",
						"content": {
							"application/json": {
								"schema": {
									"type": "object",
									"properties": {
										"message": {
											"type": "string",
											"example": "Email subscribed successfully. Check your inbox to find a confirmation email."
										}
									}
								}
							}
						}
					},
					"400": {
						"description": "Bad Request - Invalid Input",
						"content": {
							"application/json": {
								"schema": {
									"type": "object",
									"properties": {
										"message": {
											"type": "string",
											"example": "Specified email was invalid"
										}
									},
									"required": [
										"message"
									]
								}
							}
						}
					}
				}
			}
		},
		"/mailing/unsubscribe": {
			"post": {
				"summary": "Unsubscribe from mailing list",
				"description": "Removes the specified email from the site mailing list using the provided unsubscription token",
				"parameters": [
					{
						"name": "accept",
						"in": "query",
						"description": "Client type that request was sent from (text/html|application/json)",
						"required": false,
						"schema": {
							"type": "string"
						}
					}
				],
				"requestBody": {
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"type": "object",
								"properties": {
									"email": {
										"type": "string"
									},
									"unsubscribeToken": {
										"type": "string"
									}
								},
								"required": [
									"email",
									"unsubscribeToken"
								]
							}
						}
					}
				},
				"responses": {
					"200": {
						"description": "Success - Email unsubscribed",
						"content": {
							"application/json": {
								"schema": {
									"type": "object",
									"properties": {
										"message": {
											"type": "string",
											"example": "Email unsubscribed successfully."
										}
									}
								}
							},
							"text/html": {
								"example": "<html>\n<head>\n\t<title>Unsubscribe</title>\n</head>\n<body>\n\t<h1>ðŸ‘‹ Sorry to see you go!</h1>\n\t<p>You have successfully unsubscribed from our mailing list. You shouldn't receive emails from us again.</p>\n</body>\n</html>"
							}
						}
					},
					"400": {
						"description": "Bad Request - Invalid Input",
						"content": {
							"application/json": {
								"schema": {
									"type": "object",
									"properties": {
										"message": {
											"type": "string",
											"example": "Specified email or unsubscription token was invalid"
										}
									}
								}
							}
						}
					},
					"415": {
						"description": "Unsupported Media Type - Invalid accepted content type",
						"content": {
							"application/json": {
								"schema": {
									"type": "object",
									"properties": {
										"message": {
											"type": "string",
											"example": "Specified accepted content type was invalid"
										}
									},
									"required": [
										"message"
									]
								}
							}
						}
					}
				}
			}
		},
		"/contact": {
			"post": {
				"summary": "Submit a contact form",
				"description": "Submits a contact form with user details and message",
				"requestBody": {
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"type": "object",
								"properties": {
									"firstName": {
										"type": "string",
										"description": "First name of the contact"
									},
									"lastName": {
										"type": "string",
										"description": "Last name of the contact"
									},
									"email": {
										"type": "string",
										"description": "Email address of the contact"
									},
									"message": {
										"type": "string",
										"description": "Message from the contact (max 300 characters)"
									}
								},
								"required": [
									"firstName",
									"email",
									"message"
								]
							}
						}
					}
				},
				"responses": {
					"200": {
						"description": "Contact form submitted successfully",
						"content": {
							"application/json": {
								"schema": {
									"type": "object",
									"properties": {
										"message": {
											"type": "string",
											"example": "Contact form submitted successfully"
										}
									}
								}
							}
						}
					},
					"400": {
						"description": "Bad Request - Invalid Input",
						"content": {
							"application/json": {
								"schema": {
									"type": "object",
									"properties": {
										"message": {
											"type": "string",
											"example": "Specified name, email, or message was invalid"
										}
									},
									"required": [
										"message"
									]
								}
							}
						}
					}
				}
			}
		}
	},
	"components": {
		"schemas": {}
	}
}